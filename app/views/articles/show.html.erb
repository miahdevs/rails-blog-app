<div class="max-w-screen-md w-full mx-auto mt-10 text-white text-center">
  <% if user_signed_in? %>
    <div class="flex justify-end mb-10 gap-4">
      <button class="text-blue-500 bg-white py-1 px-2 rounded-md shadow-md"><%= link_to "Edit", edit_article_path(@article.slug) %></button>
      <button class="text-red-500 bg-white py-1 px-2 rounded-md shadow-md"><%= link_to "Delete", article_path(@article.slug), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></button>
    </div>
  <% end %>
  <p class="text-sm text-gray-400"><%= @article.created_at.strftime("%B %d, %Y") %></p>
  <h1 class="text-4xl font-bold mt-4 mb-8"><%= @article.title.titleize %></h1>
  <p><%= @article.body %></p>

  <hr class="border-white w-5/6 max-w-md mx-auto mt-20">

  <div class="mt-10 w-5/6 max-w-md mx-auto">
    <h2 class="text-lg font-bold">Comments</h2>
    <%= render @article.comments %>
    <h2 class="mt-4 text-left text-lg mb-2 font-bold">Add new comment:</h2>
    <%= render "comments/form", article: @article %>
  </div>
  <p class="mt-10">
    <%= link_to "<< Back to Home", root_path %>
  </p>
</div>